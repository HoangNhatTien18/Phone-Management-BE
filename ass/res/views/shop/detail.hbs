      <img src="/images/{{shop.image}}" alt="{{shop.image}}" />
    
    <div class="col-lg-5 content-detail">
      <h1>{{shop.name}}</h1>
      <h3 class="text-price-detail">{{shop.price}}.VNĐ</h3>
      <div class="row btn-detail">
