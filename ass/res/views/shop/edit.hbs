{{> header}}  
<div class="container mt-4">
    <h1>Sửa Sản Phẩm</h1>
    <form method="POST" action="/shop/{{shop._id}}?_method=PUT">
      <div class="form-group">
        <label for="name">Tên sản phẩm</label>
        <input type="text" class="form-control" value="{{shop.name}}" id="name" name="name" >
      </div>
      <div class="form-group">
        <label for="price">Giá</label>
        <input type="text" class="form-control" value="{{shop.price}}" id="price" name="price">
      </div>
       <div class="form-group">
        <label for="image">Hình ảnh</label>
        <input type="text" class="form-control" value="{{shop.image}}" id="image" name="image">
      </div>
      <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>